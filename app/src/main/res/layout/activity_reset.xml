<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="#2a0e0b" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:background="#56bedc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <EditText
            android:fontFamily="serif-monospace"
            android:id="@+id/emailres"
            android:background="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:hint="@string/repass" android:ems="10" android:inputType="textEmailAddress"
            android:importantForAutofill="no" />

        <Button
            android:id="@+id/resetb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ema"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
